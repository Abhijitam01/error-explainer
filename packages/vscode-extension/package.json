{
  "name": "error-explain-vscode",
  "displayName": "Error Explain",
  "description": "AI-powered error explanation for VS Code",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Linters",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "error-explain.explain",
        "title": "Explain Error"
      },
      {
        "command": "error-explain.showHistory",
        "title": "Show Error History"
      }
    ],
    "configuration": {
      "title": "Error Explain",
      "properties": {
        "errorExplain.aiProvider": {
          "type": "string",
          "enum": ["gemini", "openai", "anthropic"],
          "default": "gemini",
          "description": "AI provider to use for explanations"
        },
        "errorExplain.geminiApiKey": {
          "type": "string",
          "default": "",
          "description": "Gemini API key"
        },
        "errorExplain.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API key"
        },
        "errorExplain.anthropicApiKey": {
          "type": "string",
          "default": "",
          "description": "Anthropic API key"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  }
}

