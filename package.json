{
  "name": "error-explain",
  "version": "1.0.0",
  "description": "CLI tool for explaining errors with AI-powered explanations",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "explain": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && npm run copy-rules",
    "copy-rules": "node scripts/copy-rules.mjs",
    "prepublishOnly": "npm run build",
    "test": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration"
  },
  "keywords": [
    "error",
    "explainer",
    "cli",
    "debugging",
    "javascript",
    "typescript",
    "nextjs",
    "mongodb",
    "postgresql",
    "ai",
    "gemini"
  ],
  "author": "abhijitam",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/abhijitam/error-explain"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "vscode-languageserver": "^8.1.0",
    "vscode-languageserver-textdocument": "^1.0.8"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "@types/node": "^20.10.0",
    "tsx": "^4.7.0",
    "vitest": "^1.0.0"
  }
}

